<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel">

    <xacro:include filename="$(find omnibot_description)/urdf/roller.xacro"/>

    <material name="gray">
        <color rgba="0.8 0.8 0.8 1.0"/>
    </material>

    <xacro:macro name="wheel" params="id yaw x y">

        <link name="wheel_${id}_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://omnibot_description/meshes/wheel/wheel.stl"/>
                </geometry>
                <material name="gray"/>
            </visual>
            <collision>
                <origin rpy="1.58 0 0" xyz="0 0.005 0"/>
                <geometry>
                    <cylinder length="0.028" radius="0.036925"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="-9.4588917160583760242e-06 -8.8415141495200006669e-06 -0.015131125342708530435" rpy="0 0 0"/>
                <mass value="0.019223052335254620093" />
                <inertia ixx="5.399262953463332839e-06" ixy="-7.3246329002135788826e-08"  ixz="-1.2642889979755781e-09" iyy="5.6557979176500377362e-06" iyz="1.9098649289524068763e-09" izz="8.6846392930505500327e-06" />
            </inertial>
        </link>

        <joint name="wheel_${id}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="wheel_${id}_link"/>
            <axis xyz="0 1 0"/>
            <origin rpy="0 0 ${yaw}" xyz="${x} ${y} -0.0124"/>
        </joint>

        <xacro:roller id="1" parent_id="${id}" pitch="-0.257" x="-0.0285" y="-0.002" z="-0.0075"/>
        <xacro:roller id="2" parent_id="${id}" pitch="-1.3" x="-0.0079" y="-0.002" z="-0.0283"/>
        <xacro:roller id="3" parent_id="${id}" pitch="0.789" x="0.0206" y="-0.002" z="-0.0208"/>
        <xacro:roller id="4" parent_id="${id}" pitch="-0.257" x="0.0285" y="-0.002" z="0.0075"/>
        <xacro:roller id="5" parent_id="${id}" pitch="-1.3" x="0.0079" y="-0.002" z="0.0283"/>
        <xacro:roller id="6" parent_id="${id}" pitch="0.789" x="-0.0206" y="-0.002" z="0.0208"/>
        <xacro:roller id="7" parent_id="${id}" pitch="0.25" x="-0.0286" y="0.0122" z="0.0075"/>
        <xacro:roller id="8" parent_id="${id}" pitch="-0.8" x="-0.0205" y="0.0122" z="-0.021"/>
        <xacro:roller id="9" parent_id="${id}" pitch="-1.85" x="0.008" y="0.0122" z="-0.0285"/>
        <xacro:roller id="10" parent_id="${id}" pitch="0.25" x="0.0286" y="0.0122" z="-0.0075"/>
        <xacro:roller id="11" parent_id="${id}" pitch="-0.8" x="0.0205" y="0.0122" z="0.021"/>
        <xacro:roller id="12" parent_id="${id}" pitch="-1.85" x="-0.008" y="0.0122" z="0.0285"/>
    </xacro:macro>

</robot>
