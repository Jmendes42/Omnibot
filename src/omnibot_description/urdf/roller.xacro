<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="roller">

    <material name="green">
        <color rgba="0 1 0 1.0"/>
    </material>

    <xacro:macro name="roller" params="number parent_number pitch x y z">
        <link name="roller_${parent_number}_${number}_link">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://omnibot_description/meshes/wheel/roller.stl"/>
                </geometry>
                <material name="green"/>
            </visual>
        </link>

        <joint name="roller_${parent_number}_${number}_joint" type="continuous">
            <parent link="wheel_${parent_number}_link"/>
            <child link="roller_${parent_number}_${number}_link"/>
            <axis xyz="0 0 1"/>
            <origin rpy="0 ${pitch} 0" xyz="${x} ${y} ${z}"/>
        </joint>
    </xacro:macro>
</robot>
