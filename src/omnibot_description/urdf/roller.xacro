<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="roller">

    <material name="green">
        <color rgba="0 1 0 1.0"/>
    </material>

    <xacro:macro name="roller" params="id parent_id pitch x y z">
        <link name="roller_${parent_id}_${id}_link">
            <inertial>
                <mass value="1.0"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://omnibot_description/meshes/wheel/roller.stl"/>
                </geometry>
                <material name="green"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <sphere radius="0.0078"/>
                </geometry>
            </collision>
        </link>

        <joint name="roller_${parent_id}_${id}_joint" type="continuous">
            <parent link="wheel_${parent_id}_link"/>
            <child link="roller_${parent_id}_${id}_link"/>
            <axis xyz="0 0 1"/>
            <origin rpy="0 ${pitch} 0" xyz="${x} ${y} ${z}"/>
        </joint>
    </xacro:macro>
</robot>
